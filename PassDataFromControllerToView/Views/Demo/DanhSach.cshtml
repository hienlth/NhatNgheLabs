
@{
    ViewData["Title"] = "DanhSach";
}

<h2>Danh sách</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Tên</th>
            <th>Hình</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.HangHoa)
        {
            <tr>
                <td>@item.MaHH</td>
                <td>@item.TenHH</td>
                <td>
                    <img src="~/images/@item.Hinh" height="120" />
                </td>
                <td>@item.DonGia.ToString("#,##0") đ</td>
                <td>@item.SoLuong</td>
            </tr>
        }
    </tbody>
</table>
